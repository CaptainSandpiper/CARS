        <Button x:Name="SortBT" Content="SORT BY COST" HorizontalAlignment="Left" Margin="865,144,0,0" VerticalAlignment="Top" Width="105" Height="22" Click="SortBT_Click" Background="#FF13CBD1" Foreground="White"/>
